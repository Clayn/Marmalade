<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>


<MenuBar fx:id="menu" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.bplaced.clayn.marmalade.ui.controller.MainMenuController">
  <menus>
    <Menu mnemonicParsing="false" text="%menu.file">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#onExit" text="%menu.exit" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="%menu.help">
      <items>
        <MenuItem mnemonicParsing="false" text="%menu.about" />
      </items>
    </Menu>
  </menus>
</MenuBar>
